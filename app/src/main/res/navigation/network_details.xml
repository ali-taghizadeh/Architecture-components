<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/network_details"
            app:startDestination="@id/networkDetailsFragment"
            tools:ignore="UnusedNavigation">

    <fragment android:id="@+id/networkDetailsFragment"
              android:name="ir.taghizadeh.tvmaze.view.networkDetails.NetworkDetailsFragment"
              android:label="NetworkDetailsFragment">
        <argument android:name="network_id" app:argType="string"/>
        <action android:id="@+id/networkDetailsFragment_to_showDetailsFragment"
                app:destination="@id/showDetailsFragment"/>
    </fragment>

    <navigation android:id="@+id/showDetailsFragment" app:startDestination="@id/show_details">
        <include app:graph="@navigation/show_details"/>
        <argument android:name="show_id" app:argType="string"/>
    </navigation>

</navigation>