<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shows"
            app:startDestination="@id/showsListFragment">

    <fragment
            android:id="@+id/showsListFragment"
            android:name="ir.taghizadeh.tvmaze.view.showsList.ShowsListFragment"
            android:label="ShowsListFragment">
        <action
                android:id="@+id/action_showsListFragment_to_show_details"
                app:destination="@id/show_details"/>
    </fragment>
    <navigation
            android:id="@+id/show_details"
            app:startDestination="@id/show_details">
        <include app:graph="@navigation/show_details"/>
        <argument
                android:name="show_id"
                app:argType="string"
                android:defaultValue="NoValue"/>
    </navigation>
</navigation>