<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/shows"
            app:startDestination="@id/showsListFragment" tools:ignore="UnusedNavigation">

    <fragment
            android:id="@+id/showsListFragment"
            android:name="ir.taghizadeh.deezer.view.showsList.ShowsListFragment"
            android:label="ShowsListFragment">
        <action android:id="@+id/showsListFragment_to_showDetailsFragment" app:destination="@id/showDetailsFragment"/>
    </fragment>

    <navigation android:id="@+id/showDetailsFragment" app:startDestination="@id/show_details">
        <include app:graph="@navigation/show_details"/>
        <argument android:name="show_id" app:argType="string"/>
    </navigation>

</navigation>