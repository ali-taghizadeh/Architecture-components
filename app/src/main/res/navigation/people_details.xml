<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/people_details"
            app:startDestination="@id/peopleDetailsFragment">

    <fragment
            android:id="@+id/peopleDetailsFragment"
            android:name="ir.taghizadeh.tvmaze.view.peopleDetails.PeopleDetailsFragment"
            android:label="PeopleDetailsFragment">
        <argument
                android:name="people_id"
                app:argType="string"
                android:defaultValue="NoValue"/>
        <action
                android:id="@+id/action_peopleDetailsFragment_to_show_details"
                app:destination="@id/people_to_show_details"/>
    </fragment>
    <navigation android:id="@+id/people_to_show_details"
                app:startDestination="@id/show_details">
        <include app:graph="@navigation/show_details"/>
        <argument
                android:name="show_id"
                app:argType="string"
                android:defaultValue="NoValue"/>
    </navigation>
</navigation>