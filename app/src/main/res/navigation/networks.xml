<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/networks"
            app:startDestination="@id/networksListFragment">

    <fragment
            android:id="@+id/networksListFragment"
            android:name="ir.taghizadeh.tvmaze.view.networksList.NetworksListFragment"
            android:label="NetworksListFragment">
        <action
                android:id="@+id/action_networksListFragment_to_network_details"
                app:destination="@id/network_details"/>
    </fragment>
    <navigation
            android:id="@+id/network_details"
            app:startDestination="@id/network_details">
        <include app:graph="@navigation/network_details"/>
        <argument
                android:name="network_id"
                app:argType="string"
                android:defaultValue="NoValue"/>
    </navigation>
</navigation>