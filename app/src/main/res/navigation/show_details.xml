<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/show_details"
            app:startDestination="@id/showDetailsFragment"
            tools:ignore="UnusedNavigation">

    <fragment android:id="@+id/showDetailsFragment"
              android:name="ir.taghizadeh.tvmaze.view.showDetails.ShowDetailsFragment"
              android:label="ShowDetailsFragment">
        <argument android:name="show_id" app:argType="string"/>
        <action android:id="@+id/showDetailsFragment_to_networkDetailsFragment"
                app:destination="@id/networkDetailsFragment"/>
        <action android:id="@+id/showDetailsFragment_to_peopleDetailsFragment"
                app:destination="@id/peopleDetailsFragment"/>
    </fragment>

    <fragment android:id="@+id/networkDetailsFragment"
              android:name="ir.taghizadeh.tvmaze.view.networkDetails.NetworkDetailsFragment"
              android:label="NetworkDetailsFragment">
        <argument android:name="network_id" app:argType="string"/>
        <action android:id="@+id/networkDetailsFragment_to_showDetailsFragment"
                app:destination="@id/showDetailsFragment"/>
    </fragment>

    <fragment android:id="@+id/peopleDetailsFragment"
              android:name="ir.taghizadeh.tvmaze.view.peopleDetails.PeopleDetailsFragment"
              android:label="PeopleDetailsFragment">
        <argument android:name="people_id" app:argType="string"/>
        <action android:id="@+id/peopleDetailsFragment_to_showDetailsFragment"
                app:destination="@id/showDetailsFragment"/>
    </fragment>

</navigation>